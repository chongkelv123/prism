# ================================
# backend/services/platform-integrations-service/.env
# ================================

# MongoDB Configuration
MONGODB_URI=mongodb://mongo:27017/prism-integrations

# JWT Secret (should match auth service)
JWT_SECRET=prism_development_secret_2024

# Encryption Key for storing sensitive connection data (32 characters)
ENCRYPTION_KEY=prism_platform_encryption_key_32ch

# Service Configuration
PORT=4005
NODE_ENV=development

# RabbitMQ (optional)
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_EXCHANGE=prism.events

# Logging
LOG_LEVEL=info